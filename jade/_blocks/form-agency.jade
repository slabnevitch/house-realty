form(action="#" class="form sidebar-form")
	._tabs
		ul.tabs__buttons.sidebar-form__buttons
			li.sidebar-form__tab-item
				a.tab.sidebar-form__tab.active(href='#') Я покупатель
			li.sidebar-form__tab-item
				a.tab.sidebar-form__tab(href='#') Я продавец

		ul.tabs__container
			li.tab-content.active
				label.form__label
					span.form__key Фамилия Имя Отчество
					span.form__error-message
					input(autocomplete="off" type="text" name="" class="form__input" value="Семашко Захар Владимирович" placeholder="Введите ФИО")

				label.form__label
					span.form__key Email
					span.form__error-message
					input(autocomplete="off" type="text" name="" class="form__input" value="pochta@mail.ru"  placeholder="Введите еmail")

				label.form__label
					span.form__key Город
					span.form__error-message
					input(autocomplete="off" type="text" name="" class="form__input" value="Сочи" placeholder="Введите город")

				label.form__label
					span.form__key Телефон
					span.form__error-message
					input(autocomplete="off" type="text" name="" class="form__input" value="+7 912 587-36-56" placeholder="Введите телефон")

				label.form__label.form__label--password
					button(type="button").eye-ico.unblind
						+icon('eye')
						+icon('eye-off')
					span.form__key Пароль
					span.form__error-message
					input(autocomplete="off" type="text" name="" class="form__input" value="5UimdK5dd" placeholder="Введите пароль")

				label.form__label.form__label--password
					button(type="button").eye-ico
						+icon('eye')
						+icon('eye-off')
					span.form__key Повторить пароль
					span.form__error-message
					input(autocomplete="off" type="password" name="" class="form__input" value="5UimdK5dd" placeholder="Повторите пароль")

				.form__bottom
					.form__line
						button.btn(type="submit") Зарегистрироваться	
					.form__line
						p.form__text Нажимая на кнопку, вы соглашаетесь 
							br
							| #[button(type="button" data-micromodal-open="privacy-modal") на обработку ваших персональных данных]
					.form__line
						a(href="#").link Уже есть аккаунт
			
			li.tab-content.hidden
				- var roles = ['Продавец', 'Агент', 'Застройщик', 'Агенство недвижимости', 'Инвестор'];
				.form__checks
					each role, ind in roles
						label.form__radio-false
							input(type="radio" name="salesman-role" checked=ind==3 ? true : false)
							.form__check-value= role
				label.form__label
					span.form__key Название компании
					span.form__error-message
					input(autocomplete="off" type="text" name="" class="form__input" value="ОАО «Строймир»" placeholder="Введите название компании")

				label.form__label
					span.form__key Телефон
					span.form__error-message
					input(autocomplete="off" type="text" name="" class="form__input" value="+7 912 587-36-56" placeholder="Введите телефон")

				label.form__label
					span.form__key Email
					span.form__error-message
					input(autocomplete="off" type="text" name="" class="form__input" value="pochta@mail.ru" placeholder="Введите еmail")

				.form__bottom
					.form__line
						button.btn(type="submit") Зарегистрироваться	
					.form__line
						p.form__text Нажимая на кнопку, вы соглашаетесь 
							br
							| #[button(type="button" data-micromodal-open="privacy-modal") на обработку ваших персональных данных]
					.form__line
						a(href="#").link Уже есть аккаунт