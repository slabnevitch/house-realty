mixin privacy-modal()
	#privacy-modal.modal.modal-privacy.micromodal-slide(aria-hidden='true')
		.modal__overlay(tabindex='-1' data-micromodal-close)
			.modal__container(role='dialog' aria-modal='true' aria-labelledby='modal-1-title' data-simplebar)
				button.modal__close(aria-label='Close modal' data-micromodal-close)
				main.modal__content
