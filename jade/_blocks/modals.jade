mixin city-select-modal()
	#city-select-modal.modal.modal-city-select.micromodal-slide(aria-hidden='true')
		.modal__overlay(tabindex='-1' data-micromodal-close)
			.modal__container(role='dialog' aria-modal='true' aria-labelledby='modal-1-title')
				button.modal__close(aria-label='Close modal' data-micromodal-close)
				main.modal__content
					h2 Выберите свой населённый пункт
					form(action="#" class="offers-filter")
						- var prices = ['Брянск', 'Москва', 'Санкт-Петербург', 'Сочи', 'Томск', 'Ялта'];
							.offers-filter__items
								each price, ind in prices
									label.offers-filter__item
										input(type="radio" name="city" class="offers-filter__input" checked=ind==0?true:false)
										span.btn.offers-filter__name= price
						.modal__bottom
							a(href="#").btn(type="submit") Выбрать

